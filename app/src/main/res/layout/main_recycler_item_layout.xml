<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/recyclerView_bg"
    >

    <TextView
        android:id="@+id/recyclerView_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/recyclerView_date"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/recyclerView_date"
        android:text="content"
        android:textSize="@dimen/edit_text_size"/>

    <TextView
        android:id="@+id/recyclerView_date"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:text="date"
        android:textSize="@dimen/main_recycler_item_time"/>
</RelativeLayout>